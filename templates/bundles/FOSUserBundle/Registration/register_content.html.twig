
{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
<div class="hero is-fullheight "  style="background-image:url(/assets/images/bul.jpg)" >

 
    <div class="hero-body" >
        <div class="container has-text-centered"  >
            <div class="column is-4 is-offset-4">
                 {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}

                    
                <hr class="login-hr">
                    <p class="subtitle has-text-black is-size-3">Please Register to proceed.</p>
                    <div class="box">
                        <figure class="avatar">
                            <img  src="/assets/images/log.jpeg" alt="login logo"/>
                        </figure>
    
     <h3 class="title has-text-black is-size-6">  

        
    {{ form_widget(form) }}

    </h3>
     
 

</div>
    

                    <div>
                         <input type="submit" value="{{ 'registration.submit'|trans }}" />
                    </div>


                    </div>
            </div>
        </div>
    </div>
    
   
{{ form_end(form) }}
