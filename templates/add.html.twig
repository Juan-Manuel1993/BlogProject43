{% extends "base.html.twig" %}

{% block title %}Ajouter un article - {{ parent() }}{% endblock %}

{% block content %}

<section class="section" id="add_article">
    <div class="column">
        <div class="section-heading">
            <h3 class="title is-2 has-text-black has-text-centered">Ajouter un article</h3>
        </div>
        <br>

        <div class="columns">
            <div class="column is-8 is-offset-2">
                {{ form_start(form) }}
                    <div class="field">
                        {{ form_label(form.title, 'Titre',{'label_attr': {'class': 'label'}})}}
                        <div class="control has-icons-left">
                            {{ form_widget(form.title, {'attr': {'placeholder': 'e.g Un titre', 'class': 'input'}})}}
                            <span class="icon is-small is-left">
                                <i class="ion-ionic ion-md-paper"></i>
                            </span>
                        </div>
                    </div>

                    <div class="field">
                        {{ form_label(form.featured_image, 'Image',{'label_attr': {'class': 'label'}})}}
                        <div id="file-js-example" class="file has-name is-fullwidth">
                            <label class="file-label">
                                {{ form_widget(form.featured_image, {'attr': {'class' : 'file-input'}})}}
                                <span class="file-cta">
                                    <span class="file-icon">
                                        <i class="ion-ionic ion-md-image"></i>
                                    </span>
                                    <span class="file-label">
                                        Choose a fileâ€¦
                                    </span>
                                </span>
                                <span class="file-name">
                                    No file uploaded
                                </span>
                            </label>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Phone</label>
                        <div class="control has-icons-left">
                            <input class="input" type="phone" placeholder="e.g 5551234567" value="">
                            <span class="icon is-small is-left">
                                <i class="fa fa-phone"></i>
                            </span>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Contenu de l'article</label>
                        <div class="control">
                            {{ form_widget(form.contenu, {'attr': {'class' : 'textarea', 'placeholder' : 'ex: <h1>Article</h1><p>Paragraphe 1</p>'}})}}
                        <span></span>
                    </div>
                </div>

                <div class="field is-grouped has-text-centered">
                    <div class="control">
                        <button class="button is-medium"><span class="icon">
                            <i class="ion-ionic ion-md-paper"></i>
                        </span>
                        <span>Ajouter</span></button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

</div>
</section>

{% endblock %}

{% block scripts %}

<script src="{{ asset('assets/js/file_upload_name.js') }}"></script>

{% endblock %}
